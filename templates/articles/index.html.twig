{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>{{ name }}'s articles</h1>

    {% if articles %}
        <ul id="articles">
            {% for article in articles %}
                <a href="/article/{{ article.id }}">
                    <li>{{ article.title }}</li>
                </a>
                <a href="/article/edit/{{ article.id }}" class="btn btn-dark mr-3">
                    Edit
                </a>
                <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">
                    Delete
                </a>
                <hr>
            {% endfor %}
        </ul>
    {% else %}
        <div>There are currently no articles.</div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}